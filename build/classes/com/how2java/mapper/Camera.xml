<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

	<mapper namespace="com.how2java.mapper.CameraMapper">
	    <insert id="add" parameterType="Camera" >
	        insert into cameraslist (nameCN,nameEN,webURL,width,height,testRigid,testRigName) values (#{nameCN},#{nameEN},#{webURL},#{width},#{height},#{testRigid},#{testRigName})
	    </insert>
	    
	    <delete id="delete" parameterType="Camera" >
	        delete from cameraslist where id= #{id}
	    </delete>
	    
	    <select id="get" parameterType="_int" resultType="Camera">
	        select * from   cameraslist  where id= #{id}
	    </select>

	    <update id="update" parameterType="Camera" >
	        update cameraslist set (nameCN,nameEN,webURL,width,height,testRigid,testRigName)=(#{nameCN},#{nameEN},#{webURL},#{width},#{height},#{testRigid},#{testRigName}) where id=#{id}
	    </update>
	    <select id="list" resultType="Camera">
	        select * from   cameraslist order by id desc
	        <if test="start!=null and count!=null">
                    limit #{start},#{count}
            </if>
            
	    </select>
	    <select id="total" resultType="int">
	        select count(*) from   cameraslist
	    </select>	    	    
	</mapper>

